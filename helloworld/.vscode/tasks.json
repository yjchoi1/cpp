{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",  // what you will see in the tasks list; you can name this whatever you want
            "command": "/usr/bin/g++",  // specify the program to run
            "args": [  // argument to pass to g++
                "-fdiagnostics-color=always",
                "-g",
                "${file}",  // active file to compile. You can also do something like follows: "${workspaceFolder}/*.cpp" 
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"  // run without extension
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true  // set the current setting to predefined default
            },
            "detail": "Task generated by Debugger."  // what you will as the description of the task in the tasks list.
        }
    ],
    "version": "2.0.0"
}